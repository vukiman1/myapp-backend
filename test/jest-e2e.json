{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "@app/base": "<rootDir>/../libs/base/src",
    "@app/base/(.*)": "<rootDir>/../libs/base/src/$1",
    "@app/database": "<rootDir>/../libs/database/src",
    "@app/database/(.*)": "<rootDir>/../libs/database/src/$1",
    "@app/helpers": "<rootDir>/../libs/helpers/src",
    "@app/helpers/(.*)": "<rootDir>/../libs/helpers/src/$1",
    "@app/my-library": "<rootDir>/../libs/my-library/src",
    "@app/my-library/(.*)": "<rootDir>/../libs/my-library/src/$1"
  }
}